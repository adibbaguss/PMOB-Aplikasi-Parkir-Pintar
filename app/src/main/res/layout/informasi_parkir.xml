<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tampilTempat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jogjatronik"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jl. Brigjend Katamso 75-77, Yogyakarta, Indonesia"
            android:textColor="@color/black"
            android:textSize="12dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/tampilGambar"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:srcCompat="?android:attr/fastScrollTrackDrawable" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:background="@drawable/bottom_menu"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/tampilHarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:gravity="right"
            android:text="Rp 5.000/jam"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:id="@+id/Rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tampilHarga"
            android:layout_marginHorizontal="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/tampilratingBar1"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.5"
                android:theme="@style/RatingBar" />

            <TextView
                android:id="@+id/tampilRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="4.5"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radioGroupParkir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Rating"
            android:layout_marginHorizontal="25dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioParkirMotor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Parkir Motor"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <RadioButton
                android:id="@+id/radioParkirMobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Parkir Mobil"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </RadioGroup>

        <LinearLayout
            android:id="@+id/Slot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroupParkir"
            android:layout_marginHorizontal="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sisaSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:text="Sisa Slot :"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 Motor"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Mobil"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:layout_below="@+id/Slot"
            android:id="@+id/Fasilitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:text="Fasilitas:"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/isiFasilitas"
            android:layout_below="@+id/Fasilitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:orientation="vertical"
            android:paddingLeft="30dp">

            <TextView
                android:id="@+id/fasilitasCctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:text="CCTV\t\t\t\t:"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tampilJamCctv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_toRightOf="@+id/fasilitasCctv"
                android:text="24 jam"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/fasilitasSatpam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fasilitasCctv"
                android:layout_marginHorizontal="25dp"
                android:text="Satpam\t\t:"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tampilJamsatpam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tampilJamCctv"
                android:layout_marginHorizontal="25dp"
                android:layout_toRightOf="@+id/fasilitasSatpam"
                android:text="24 Jam"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="10dp"
            android:text="Operasional : Senin - Minggu 07.00 - 23.00"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:text="Operasional : Senin - Minggu 07.00 - 23.00"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/tosca"
            android:text="Pesan" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="40dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/grey"
            android:text="Kembali"
            android:textColor="@color/semiblack" />


    </RelativeLayout>



</RelativeLayout>